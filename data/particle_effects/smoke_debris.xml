<?xml version="1.0" encoding="utf-8"?>

<ParticleEffect>
	<Particle>
		<Texture value="m_dirt1.dds" />
		<Emissive value="false" type="bool" comment="" />
		<Lighting value="false" type="bool" comment="" />
		<SizeRange min="0.01" max="0.03" type="float" comment="" />
		<ColorRange min_r="0.5" min_g="0.5" min_b="0.5" min_a="1.0"
                    max_r="0.15" max_g="0.15" max_b="0.01" max_a="1.0" type="float rgba" comment="" />
		<AlphaRange min="1.0" max="0.1" type="float" comment="" />
		<LifeTime value="0.9" type="float" comment="Lifetime of a single particle" />
		<Mass value="0.9" type="float" comment="in kg" />
	</Particle>

	<Emitter>
		<LifeTime value="0.05" type="float" comment="Lifetime of the particle system itself, zero = endless" />

		<Counter>

			<ConstantRate value="170" type="float" comment="defines emitted particles per second" />
			<!--	    
	    <RandomRateRange min="45" max="70" type="float" comment="" />
            -->
		</Counter>
		<Placer>
			<CenteredPlacer>
				<Center x="0" y="0.0" z="0" type="float xyz" comment="" />
				<InitalRotationRange min_x="0.0" min_y="0.0" min_z="0"
		   max_x="0.0" max_y="0.0" max_z="240" type="float vec3" comment="in degrees" />
				<RangeX min="-0.1" max="0.1" type="float" comment="" />
			</CenteredPlacer>
		</Placer>
		<Shooter>
			<InitialSpeedRange min="1.4" max="2.4" type="float" comment="in meter/second" />
			<ThetaRange min="-45" max="45" type="float" comment="in degrees, around x axis, zero is at pos. z" />
			<PhiRange min="-45" max="45" type="float" comment="in degrees, around z axis, zero is at pos. x" />
			<RotationalSpeedRange min_x="0.1" min_y="0.0" min_z="3.1"
							max_x="0.2" max_y="0.0" max_z="4.2" type="float vec3" comment="in meter/second" />
		</Shooter>
	</Emitter>

	<Program>
		<!--<AlignWithVelocityVectorOperator comment="if this element exists, particles are aligned like sparks to velocity" />-->
		<AccelerationOperator x="0.0" y="-2" z="0.0" type="float" comment="" />
		<AirFrictionOperator comment="if this element exists, particle speed is calculated together with air friction" />

	</Program>
</ParticleEffect>